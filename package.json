{
  "name": "vue-instantsearch",
  "author": {
    "name": "Algolia, Inc.",
    "url": "https://www.algolia.com"
  },
  "description": "ðŸ‘€ Lightning-fast Algolia search for Vue apps",
  "keywords": [
    "vue",
    "algolia",
    "search",
    "instantsearch",
    "components",
    "ui",
    "facet",
    "autocomplete"
  ],
  "license": "MIT",
  "version": "1.5.0",
  "files": [
    "dist"
  ],
  "main": "dist/vue-instantsearch.common.js",
  "module": "dist/vue-instantsearch.esm.js",
  "repository": "https://github.com/algolia/vue-instantsearch",
  "scripts": {
    "build": "rollup -c",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o docs/dist/stories",
    "docs:build": "cd docs && yarn && yarn build",
    "docs:build:dev": "cd docs && yarn && yarn build:dev",
    "docs:watch": "cd docs && yarn && yarn dev",
    "docs:deploy": "cd docs && yarn && yarn deploy",
    "test": "jest --verbose --coverage && yarn run lint",
    "test:update": "jest --verbose --updateSnapshot",
    "test:watch": "jest --verbose --watchAll --notify",
    "lint": "eslint --ext .js,.vue .",
    "lint:fix": "eslint --ext .js,.vue . --fix",
    "format": "prettier --write '**/*.{js,md,vue,css}'",
    "changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file",
    "changelog:unreleased": "conventional-changelog --preset angular --output-unreleased"
  },
  "dependencies": {
    "algoliasearch": "^3.25.1",
    "algoliasearch-helper": "^2.24.0",
    "escape-html": "^1.0.3",
    "instantsearch.js": "^2.7.1",
    "lodash": "^4.17.4"
  },
  "peerDependencies": {
    "vue": "^2.2.2"
  },
  "devDependencies": {
    "@storybook/vue": "^3.3.10",
    "@vue/test-utils": "^1.0.0-beta.13",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-preset-es2015": "^6.24.0",
    "concurrently": "^3.5.1",
    "conventional-changelog-cli": "^1.3.5",
    "eslint": "^4.18.2",
    "eslint-config-algolia": "13.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.14.0",
    "eslint-plugin-prettier": "^2.6.0",
    "instantsearch.css": "^7.0.0",
    "jest": "^22.4.2",
    "jest-serializer-html": "^5.0.0",
    "jest-vue-preprocessor": "^1.3.1",
    "prettier": "^1.11.1",
    "rollup": "^0.56.5",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-json": "^2.1.1",
    "rollup-plugin-node-resolve": "3.2.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "rollup-plugin-vue": "^3.0.0",
    "rollup-watch": "^4.3.1",
    "vue": "^2.5.13",
    "vue-json-tree": "^0.3.3",
    "vue-loader": "^14.2.1",
    "vue-template-compiler": "^2.5.13"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "snapshotSerializers": [
      "jest-serializer-html"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(instantsearch\\.js|vue-json-tree))"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    }
  }
}
